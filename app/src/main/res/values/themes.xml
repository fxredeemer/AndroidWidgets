<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleWatch" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background">@android:color/transparent</item>
        <item name="backgroundColor">@android:color/transparent</item>
    </style>

    <style name="Theme.SimpleWatch.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">4dp</item>
        <item name="appWidgetInnerRadius">0dp</item>
    </style>

    <style name="Theme.SimpleWatch.AppWidgetContainer" parent="Theme.SimpleWatch.AppWidgetContainerParent">
        <item name="appWidgetPadding">0dp</item>
    </style>
</resources>